.weui-grid {
  /*float: left;*/
  /*flex-direction: row;*/
  padding: 10rpx 0;
  width: 190rpx;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
  border-radius: 8rpx;
  margin: 10rpx 20rpx;
  background-color: white;
}

.weui-grids {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border: none;
}

